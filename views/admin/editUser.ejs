<%- include('../layout/header.ejs') %>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../layout/sidebar.ejs') %>
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                            <h4 class="py-3 mb-4">Edit Porfile</h4>
                                <div class="row">
                                    <div class="col-xl-6">
                                        <div class="card mb-4">
                                            <div class="card-body">
                                                <form action="" method="post" enctype="multipart/form-data">
                                                    <div class="mb-3 profile-img">
                                                        <img src="./assets/userImages/<%= user.image %>" alt="<%= user.image %>"></br></br>
                                                        <label class="col-form-label">Change Profile Image</label>
                                                        <input type="file" class="form-control" placeholder="Upload Image" name="image" accept="image/png, image/jpeg,image/jpg">
                                                    </div> 
                                                    <div class="mb-3">
                                                        <label class="col-form-label" for="basic-default-fullname">Name</label>
                                                        <input type="text" class="form-control" id="basic-default-fullname"
                                                            placeholder="Enter Username" name="username" value="<%= user.username %>" pattern="^[A-Za-z0-9 ]+$" required/>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="col-form-label" for="basic-default-email">Email</label>
                                                        <div class="input-group input-group-merge">
                                                            <input type="text" id="basic-default-email" class="form-control"
                                                                placeholder="Enter Email" aria-label="john.doe"
                                                                aria-describedby="basic-default-email2" name="email" value="<%= user.email %>" disabled />
                                                        </div>
                                                    </div>
                                                    <div class="mb-3">
                                                        <label class="col-form-label" for="basic-default-phone">Phone No</label>
                                                        <input type="text" id="basic-default-phone"
                                                            class="form-control phone-mask" placeholder="Enter Phone No." name="phone" value="<%= user.phone %>" required/>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Save</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        </div>
            <%- include('../layout/footer.ejs') %>