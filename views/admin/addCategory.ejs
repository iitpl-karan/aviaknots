<%- include('../layout/header.ejs') %>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../layout/sidebar.ejs') %>
            <div class="content-wrapper">
                <div class="container-xxl flex-grow-1 container-p-y">
                    <div class="row">
                        <div class="col-md-6">
                            <h4 class="py-3 mb-4">
                                <span class="text-muted fw-light">Category /</span> Add Category
                              </h4>
                            <div class="card mb-4">
                                <form action="" method="post" enctype="multipart/form-data">
                                    <div class="card-body">
                                        <% if(typeof message !== 'undefined'){ %>
                                            <div class="alert alert-primary alert-dismissible" role="alert"><%= message %>
                                             <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                         <% } %>
                                         <% if(flash.error.length> 0){ %>
                                            <div class="alert alert-danger alert-dismissible" role="alert">
                                                <%= flash.error %>
                                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                            </div>
                                        <% } %>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="mb-3">

                                                    <div class="row mb-3">
                                                        <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">Exam</label>
                                                        <div class="col-sm-10">
                                                            <div class="input-group">
                                                                <select class="form-select" name="examId" id="defaultSelect">
                                                                    <% if (exam.length > 0) { %>
                                                                        <option value="" disabled selected>Select Exam...</option>
                                                                        <% exam.forEach(examItem => { %>
                                                                            <option value="<%= examItem._id %>"><%= examItem.name %></option>
                                                                        <% }); %>
                                                                    <% } else { %>
                                                                        <option value="" disabled>No exams available</option>
                                                                    <% } %>
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    

                                                    
                                                <div class="row mb-3">
                                                    <label class="col-sm-2 col-form-label"
                                                        for="basic-icon-default-fullname">Name</label>
                                                    <div class="col-sm-10">
                                                        <div class="input-group input-group-merge">
                                                            <input type="text" class="form-control" name="name" value="" placeholder="Enter Category Name" required />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mb-3">
                                                    <label class="col-sm-2 col-form-label"
                                                        for="basic-icon-default-fullname">Image</label>
                                                    <div class="col-sm-10">
                                                        <div class="input-group input-group-merge">
                                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                                <i class="bx bx-image"></i>
                                                            </span>
                                                            <input type="file" id="upload" name="image" class="form-control" accept="image/png, image/jpeg,image/jpg" required/>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mt-10">
                                                    <label class="col-sm-2 col-form-label" for="basic-icon-default-fullname">is Active</label>
                                                    <div class="col-sm-10">
                                                        <div class="form-check form-switch mb-2">
                                                            <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="is_active">
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="row mb-3">
                                                    <label class="col-sm-2 col-form-label"
                                                        for="basic-icon-default-fullname">is_feature</label>
                                                        <div class="col-sm-10">
                                                            <div class="form-check form-switch mb-2">
                                                                <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault" name="is_feature">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <div class="row">
                                            <div class="col-sm-2"></div>
                                            <div class="col-sm-8">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                                <a href="/view-category" class="ms-3 btn btn-dark">Back</a>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <%- include('../layout/footer.ejs') %>


           
