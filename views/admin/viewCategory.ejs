<%- include('../layout/header.ejs') %>
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <%- include('../layout/sidebar.ejs') %>
                <div class="content-wrapper">
                    <div class="container-xxl flex-grow-1 container-p-y">
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h4 class="py-3 mb-4">
                                        <span class="text-muted fw-light">Category /</span> View Category
                                    </h4>
                                    <div class="btnwrap mb-4">
                                        <a href="/add-category" class="btn btn-primary"><i class='bx bx-plus'></i>Add New Category</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover" id="list-table">
                                                <thead>
                                                    <tr>
                                                        <th>Sr No</th>
                                                        <th>Image</th>
                                                        <th>Title</th>

                                                        <th>Exam</th>
                                                        <th>Quiz Count</th>
                                                        <th>Enable</th>
                                                        <th>Feature</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% let cnt=1 %>
                                                        <% category.forEach(function(allCategory){ %>
                                                            <tr>
                                                                <td class="align-center">
                                                                    <strong><%= cnt++ %></strong>
                                                                </td>
                                                                <td>
                                                                    <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                                                        <li data-bs-toggle="tooltip"
                                                                            data-popup="tooltip-custom"
                                                                            data-bs-placement="top"
                                                                            class="avatar def-avatar avatar-xs pull-up"
                                                                            title="<%= allCategory.title %>"
                                                                            data-bs-original-title="">
                                                                            <img src="./assets/userImages/<%= allCategory.image %>"
                                                                                alt="Avatar" class="rounded-circle">
                                                                        </li>
                                                                    </ul>
                                                                </td>
                                                                <td>
                                                                    <strong><%= allCategory.name %></strong>
                                                                </td>

                                                                <td>
                                                                    <strong><%= allCategory?.examId?.name %></strong>
                                                                </td>
                                                                <td>
                                                                    <strong>
                                                                        <% if (quiz.length > 0) {
                                                                            let count = 0;
                                                                            for (let j = 0; j < quiz.length; j++) { 
                                                                                if (String(allCategory._id) === String(quiz[j].categoryId._id)) { 
                                                                                    count++;
                                                                                } } %>
                                                                            <%= count %>
                                                                        <% } %>
                                                                    <strong>
                                                                </td>
                                                                <% for (let i in loginData) {

                                                                    if (String(loginData[i]._id) === locals.user.id) {

                                                                        if (loginData[i].is_admin == 1) { %>

                                                                            <td class="pe-0">
                                                                                <form action="/category-is-active/<%= allCategory._id %>/toggle" id="featureForm" method="POST">
                                                                                    <a id="toggleButton" >
                                                                                        <div class="form-check form-switch mb-0">
                                                                                            <input type="hidden" name="title" value="<%= allCategory.title %>"/>
                                                                                            <input class="form-check-input" type="checkbox" name="is_active" id="flexSwitchCheckDefault" <% if(allCategory.is_active == 1) { %> checked <% }else{} %>>
                                                                                        </div>
                                                                                    </a>
                                                                                </form>                   
                                                                            </td>

                                                                            <td>
                                                                                <form action="/update-is-feature/<%= allCategory._id %>/toggle" id="featureForm2" method="POST">
                                                                                    <button type="button" class="btn" id="toggleButton" >
                                                                                        <div class="form-check form-switch mb-2">
                                                                                            <input type="hidden" name="title" value="<%= allCategory.name%>"/>
                                                                                            <input class="form-check-input" type="checkbox" name="is_feature" id="flexSwitchCheckDefault" <% if(allCategory.is_feature==1) { %> checked <% }else{} %>>
                                                                                        </div>
                                                                                </form>
                                                                            </td>
                                                                            
                                                                            <td>
                                                                                <div class="d-flex gap-3">
                                                                                    <a href="/edit-category?id=<%= allCategory._id %>"class="text-success me-3">
                                                                                        <i class="bx bx-edit-alt"></i></a>
                                                                                    <a href="/delete-category?id=<%= allCategory._id %>" onclick="return confirm('Are you sure want to delete this <%= allCategory.name %>' )"
                                                                                        class="text-danger me-3">
                                                                                        <i class="bx bx-trash"></i></a>
                                                                                </div>
                                                                            </td>
                                                                        <% } else if (loginData[i].is_admin==0) { %>

                                                                            <td class="ps-5 pt-5">
                                                                                <div class="form-check form-switch mb-0" onclick="alert('You have no access to change status..!!')">
                                                                                    <input class="form-check-input" type="checkbox" name="is_active" id="flexSwitchCheckDefault"  <% if(allCategory.is_active==1) { %> checked <% }else{} %>disabled>
                                                                                </div>
                                                                            </td>
                                                                            <td>
                                                                                <div class="form-check form-switch mb-2" onclick="return alert('You have no access to Enable or Disable.' )">
                                                                                    <input class="form-check-input" type="checkbox" name="is_feature"
                                                                                        id="flexSwitchCheckDefault" <% if(allCategory.is_feature==1) { %> checked <% }else{} %> disabled>
                                                                                </div>
                                                                            </td>
                                                                            <td>
                                                                                <div class="d-flex gap-3">
                                                                                    <a href="/edit-category?id=<%= allCategory._id %>" class="text-success me-3">
                                                                                    <i class="bx bx-edit-alt"></i></a>
                                                                                    <a href="" onclick="return alert('You have no access to delete <%= allCategory.name %> category.' )"
                                                                                    class="text-danger"><i class="bx bx-trash"></i></a>
                                                                                </div>
                                                                            </td>
                                                                        <% } } }%>
                                                                         </tr>
                                                                    <% }); %>
                                                                </tbody>
                                                            <table>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

<script type="text/javascript">
    const checkboxes = document.querySelectorAll('input[type="checkbox"]');
    
    checkboxes.forEach(function (checkbox) {
        checkbox.addEventListener('click', function (event) {
            const form = checkbox.closest('form');  // Get the closest form element related to the checkbox

            if (form) {
                const fieldName = form.querySelector('[name="title"]').value;  // Get the name or title value

                // Prompt the user for confirmation based on the checkbox action
                const action = checkbox.checked ? 'Enable' : 'Disable';
                if (!confirm(`Are you sure you want to ${action} ${fieldName}?`)) {
                    // Prevent checkbox from changing its checked state if cancelled
                    event.preventDefault();
                    return;
                }

                // Prepare FormData for AJAX request
                const formData = new FormData(form);
                
                // Send the AJAX POST request
                $.ajax({
                    type: "POST",
                    url: form.action,  // Use the form action URL dynamically
                    data: formData,
                    processData: false,
                    contentType: false,
                    success: function (data) {
                        console.log('Success:', data);  // Log success response
                    },
                    error: function (error) {
                        console.error('Error:', error);  // Log any errors
                    }
                });
            }
        });
    });
</script>

<%- include('../layout/footer.ejs') %>